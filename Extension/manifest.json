{
  "manifest_version": 3,
  "name": "AutoULCN",
  "version": "1.0",
  "description": "Automatically fill TOTP code for ULCN login forms.",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://login.uaccess.leidenuniv.nl/nidp/saml2/sso*",
        "https://mfa.services.universiteitleiden.nl/osp/a/TOP/auth/oauth2/grant*",
        "https://mfa.services.universiteitleiden.nl/osp/a/TOP/auth/app/contractcontinue*"
      ],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["dist/jsOTP.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
